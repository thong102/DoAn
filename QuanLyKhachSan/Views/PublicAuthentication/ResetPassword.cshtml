
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}
@if (ViewBag.mess == "Error")
{

    <div class="toast" data-delay="1000" style="position:fixed; top: 100PX; left: 10PX;z-index: 2000;width: 300px">
        <script>
            swal({
                title: 'Hai mật khẩu không trùng khớp',
                /* text: 'Redirecting...', */
                icon: 'error',
                timer: 3000,
                buttons: true,
                type: 'error'
            })
        </script>
    </div>
}
<div class="hero-wrap js-fullheight" style="background-image: url('https://onetouchmedia.vn/wp-content/uploads/2019/10/N.NT-65-1024x683.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-start" data-scrollax-parent="true">
            <div class="col-md-9 " style="margin-top: 200px" data-scrollax=" properties: { translateY: '70%' }">
                <h1 class="mb-4" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><strong>Đổi mật khẩu</strong> </h1>
                <p data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"></p>
            </div>
        </div>
    </div>
</div>
<!-- HOME -->
<section class="section-hero overlay inner-page bg-image" style="background-image: url('images/hero_1.jpg');" id="home-section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="text-white font-weight-bold">Đổi mật khẩu</h1>

            </div>
        </div>
    </div>
</section>

<section class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 mb-5">

            </div>
            <div class="col-lg-6">
                <h2 class="mb-4">Quên mật khẩu</h2>
                <form action="/PublicAuthentication/UpdatePassword" method="post" class="p-4 border rounded">
                    <input type="hidden" value="@ViewBag.IdUser" name="idUser" />
                    <div class="row form-group">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <label class="text-black" for="fname">Mật khẩu mới:</label>
                            <input type="password" id="fname" name="password" class="form-control" required>
                        </div>
                    </div>
                    <div class="row form-group mb-4">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <label class="text-black" for="fname">Nhập lại mật khẩu mới:</label>
                            <input type="password" id="fname" name="rePassword" class="form-control" required>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-6">
                            <input type="submit" value="Cập nhập" class="btn btn-block btn-primary btn-md">
                        </div>
                        <div class="col-md-6">


                        </div>
                    </div>

                </form>
            </div>
            <div class="col-lg-3 mb-5">

            </div>
        </div>
    </div>
</section>


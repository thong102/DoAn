
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}
<div class="hero-wrap js-fullheight" style="background-image: url('https://onetouchmedia.vn/wp-content/uploads/2019/10/N.NT-65-1024x683.jpg'); height: 200px">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 text-center" style="margin-top: 200px" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="/">Trang chủ</a></span> <span>Tìm kiếm</span></p>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Kết quả tìm kiếm</h1>
            </div>
        </div>
    </div>
</div>
<section class="ftco-section ftco-degree-bg">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    @if (ViewBag.List.Count == 0)
                    {
                        <h2 style="color:red;align-content:center">Không tìm thấy kết quả nào</h2>
                    }
                    else
                    {
                        foreach (var item in ViewBag.List)
                        {
                            <div class="col-md-4">
                                <div class="destination">
                                    <a href="/PublicRoom/DetailRoom/@item.idRoom">
                                        <img width="380px" class="img img-2 d-flex justify-content-center align-items-center" src="/Content/images/@item.image">

                                    </a>
                                    <div class="text p-3">
                                        <div class="d-flex">
                                            <div class="one">
                                                <h3><a href="/PublicRoom/DetailRoom/@item.idRoom">@item.name</a></h3>
                                                <p class="rate">
                                                    <i class="icon-star"></i>
                                                    <i class="icon-star"></i>
                                                    <i class="icon-star"></i>
                                                    <i class="icon-star"></i>
                                                    <i class="icon-star"></i>
                                                    <span>@item.view lượt xem</span>
                                                </p>
                                            </div>

                                            @{
                                                int price1 = item.cost - item.cost * item.discount / 100;
                                            }

                                        </div>
                                        @*   <p>Far far away, behind the word mountains, far from the countries</p>*@
                                        <p class="days"><span>@item.Type.name</span></p>
                                        <p class="days"><span>Số lượng người lớn: @item.numberAdult</span></p>
                                        <p class="days"><span>Số lượng trẻ em: @item.numberChildren</span></p>
                                        <hr>
                                        <p class="bottom-area d-flex">
                                            <span>Giá phòng : @price1 VNĐ</span>
                                            <span class="ml-auto"><a href="/PublicRoom/DetailRoom/@item.idRoom">Xem chi tiết</a></span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="row mt-5">
                    <div class="col text-center">
                        <div class="block-27">
                            <ul>
                                @if (ViewBag.tag > 1)
                                {
                                    int b = ViewBag.tag - 1;
                                    if (ViewBag.Key == 1)
                                    {
                                        <li><a href="PublicRoom/Search?page=@b&idType=@ViewBag.idType">&lt;</a></li>
                                    }
                                    else if (ViewBag.key == 2)
                                    {
                                        <li><a href="/PublicRoom/Search?page=@b&name=@ViewBag.name&idType=0">&lt;</a></li>
                                    }
                                    else
                                    {
                                        <li><a href="/PublicRoom/Search?page=@b&name=@ViewBag.name&idType=@ViewBag.idType">&lt;</a></li>
                                    }

                                }
                                else
                                {
                                    <li></li>
                                }
                                @for (var i = 1; i <= ViewBag.pageSize; i++)
                                {
                                    if (ViewBag.tag == i)
                                    {
                                        if (ViewBag.Key == 1)
                                        {
                                            <li class="active"><a href="PublicRoom/Search?page=@i&idType=@ViewBag.idType&numberChildren=@ViewBag.numberChildren&numberAdult=@ViewBag.numberAdult">@i</a></li>
                                        }
                                        else if (ViewBag.key == 2)
                                        {
                                            <li class="active"><a href="/PublicRoom/Search?page=@i&name=@ViewBag.name&idType=0&numberChildren=@ViewBag.numberChildren&numberAdult=@ViewBag.numberAdult">@i</a></li>
                                        }
                                        else
                                        {
                                            <li class="active"><a href="/PublicRoom/Search?page=@i&name=@ViewBag.name&idType=@ViewBag.idType&numberChildren=@ViewBag.numberChildren&numberAdult=@ViewBag.numberAdult">@i</a></li>
                                        }

                                    }
                                    else
                                    {
                                        if (ViewBag.Key == 1)
                                        {
                                            <li><a href="PublicRoom/Search?page=@i&idType=@ViewBag.idType&numberChildren=@ViewBag.numberChildren&numberAdult=@ViewBag.numberAdult">@i</a></li>
                                        }
                                        else if (ViewBag.key == 2)
                                        {
                                            <li><a href="/PublicRoom/Search?page=@i&name=@ViewBag.name&idType=0&numberChildren=@ViewBag.numberChildren&numberAdult=@ViewBag.numberAdult">@i</a></li>
                                        }
                                        else
                                        {
                                            <li><a href="/PublicRoom/Search?page=@i&name=@ViewBag.name&idType=@ViewBag.idType&numberChildren=@ViewBag.numberChildren&numberAdult=@ViewBag.numberAdult">@i</a></li>
                                        }
                                    }

                                }

                                @if (ViewBag.tag < ViewBag.pageSize)
                                {
                                    int a = ViewBag.tag + 1;
                                    if (ViewBag.Key == 1)
                                    {
                                        <li><a href="PublicRoom/Search?page=@a&idType=@ViewBag.idType&numberChildren=@ViewBag.numberChildren&numberAdult=@ViewBag.numberAdult">&gt;</a></li>
                                    }
                                    else if (ViewBag.key == 2)
                                    {
                                        <li><a href="/PublicRoom/Search?page=@a&name=@ViewBag.name&idType=0&numberChildren=@ViewBag.numberChildren&numberAdult=@ViewBag.numberAdult">&gt;</a></li>
                                    }
                                    else
                                    {
                                        <li><a href="/PublicRoom/Search?page=@a&name=@ViewBag.name&idType=@ViewBag.idType&numberChildren=@ViewBag.numberChildren&numberAdult=@ViewBag.numberAdult">&gt;</a></li>
                                    }

                                }
                                else
                                {
                                    <li></li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </div> <!-- .col-md-8 -->
        </div>
    </div>
</section> <!-- .section -->
